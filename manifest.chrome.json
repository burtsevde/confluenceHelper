{
  "manifest_version": 3,
  "name": "Confluence Helper",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "description": "Находит текст на странице по указанному цвету, кликает на раскрывашки и получает цвет выделенного текста",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Confluence Helper",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Alt+Shift+F"
      }
    }
  }
}